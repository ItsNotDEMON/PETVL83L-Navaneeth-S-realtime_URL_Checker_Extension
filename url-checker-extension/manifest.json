{
  "manifest_version": 3,
  "name": "Real-time URL Checker",
  "version": "1.0",
  "description": "Checks visited URLs against threat intelligence APIs",
  "permissions": ["tabs", "scripting", "notifications"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
